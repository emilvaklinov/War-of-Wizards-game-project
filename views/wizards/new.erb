<h1>Wizard <%= @wizard.name %></h1>
<% if @wizard.name == 'Lord Voldemort' %>
<p><%= Biography.voldemort %></p>
<% end %>
<% if @wizard.name == 'Bellatrix Lestrange' %>
<p><%=Biography.bellatrix  %></p>
<% end %>
<% if @wizard.name == 'Lucius Malfoy' %>
<p><%= Biography.lucius %></p>
<% end %>
<p>House: <%= @wizard.house %></p>
<p>Wand: <%= @wizard.wand %></p>

<h3>Attacked Codeclanners:</h3>

<ul>
  <% @wizard.codeclanners.each do |codeclanner| %>
  <li><%= codeclanner.name %></li>
  <% end %>
</ul>
