<h1><%= @codeclanner.name %> (codeclanner)</h1>

<p class="p1">Cohort: <%= @codeclanner.cohort %></p>

<p>
  <form action="/codeclanners/<%= @codeclanner.id %>/delete" method="POST">
    <input class="btn btn--danger" type="submit" value="Delete" />
  </form>
</p>

<p>
  <form action="/codeclanners/<%= @codeclanner.id %>/edit" method="get">
    <input class="btn btn--danger" type="submit" value="Update" />
</p>


<h3>Attacked by:</h3>

<ul>
  <% @codeclanner.wizards.each do |wizard| %>
  <li><%= wizard.name %></li>
  <% end %>
</ul>

<h3>Attacked Wizards:</h3>

<ul>
  <% @codeclanner.wizards.each do |codeclanner| %>
  <li><%= codeclanner.name %></li>
  <% end %>
</ul>
